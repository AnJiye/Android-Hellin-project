<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/log_in_background">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 핼 린 이\n   집 사"
        android:textColor="@color/white"
        android:fontFamily="@font/imhyeminregular"
        android:textSize="50dp"
        android:layout_marginBottom="100dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/google_sign_in_button"
        android:layout_width="305dp"
        android:layout_height="53.5dp"
        android:background="@drawable/google_login"
        android:textColor="@color/white" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/facebook_login_button"
        android:layout_width="305dp"
        android:layout_height="53.5dp"
        android:background="@drawable/facebook_login"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"/>


</LinearLayout>